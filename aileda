    <script>
        // PRICE CALCULATION MATRIX
        const priceMatrix = {
            split: { 0.5: 150000, 1: 180000, 1.5: 220000, 2: 250000, 2.5: 300000, 3: 350000, 5: 500000 },
            window: { 0.5: 130000, 1: 150000, 1.5: 180000, 2: 210000, 2.5: 250000, 3: 300000, 5: 450000 },
            cassette: { 0.5: 200000, 1: 250000, 1.5: 300000, 2: 350000, 2.5: 400000, 3: 450000, 5: 600000 },
            standing: { 0.5: 180000, 1: 220000, 1.5: 260000, 2: 300000, 2.5: 350000, 3: 400000, 5: 550000 }
        };

        // ROLE SWITCHING
        document.querySelectorAll('.role-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                // Update active button
                document.querySelectorAll('.role-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                // Show corresponding section
                const role = this.dataset.role;
                document.querySelectorAll('.form-section').forEach(section => {
                    section.classList.remove('active');
                });
                document.getElementById(`${role}-section`).classList.add('active');
                
                // Special actions per role
                if(role === 'technician') {
                    document.getElementById('job-list').classList.add('hidden');
                }
            });
        });

        // PRICE CALCULATION FUNCTION
        function calculatePrice() {
            const acType = document.querySelector('input[name="ac-type"]:checked').value;
            const pk = parseFloat(document.getElementById('ac-pk').value) || 1;
            const unitCount = parseInt(document.getElementById('unit-count').value) || 1;
            const method = document.getElementById('cleaning-method').value;
            
            let basePrice = priceMatrix[acType][pk] || priceMatrix[acType][1];
            
            // Method multiplier
            const methodMultiplier = {
                standard: 1,
                chemical: 1.5,
                steam: 1.8,
                deep: 2.2
            };
            
            basePrice *= methodMultiplier[method];
            
            // Additional services
            if(document.getElementById('add-freon').checked) basePrice += 80000;
            if(document.getElementById('add-service').checked) basePrice += 120000;
            
            // Unit multiplier
            basePrice *= unitCount;
            
            // Display formatted price
            return basePrice.toLocaleString('id-ID');
        }

        // UPDATE PRICE DISPLAY
        function updatePriceDisplay() {
            document.getElementById('price-display').textContent = `Rp ${calculatePrice()}`;
        }

        // ATTACH EVENT LISTENERS
        document.getElementById('calculate-btn').addEventListener('click', updatePriceDisplay);
        
        // Auto-update on change
        ['ac-pk', 'unit-count', 'cleaning-method'].forEach(id => {
            document.getElementById(id).addEventListener('change', updatePriceDisplay);
        });
        
        document.querySelectorAll('input[name="ac-type"]').forEach(radio => {
            radio.addEventListener('change', updatePriceDisplay);
        });
        
        document.querySelectorAll('input[type="checkbox"]').forEach(cb => {
            cb.addEventListener('change', updatePriceDisplay);
        });

        // FORM SUBMISSION
        document.getElementById('submit-request').addEventListener('click', function() {
            // Validation
            const requiredFields = ['customer-name', 'customer-phone', 'customer-address', 'ac-pk'];
            let valid = true;
            
            requiredFields.forEach(fieldId => {
                const field = document.getElementById(fieldId);
                if(!field.value.trim()) {
                    field.style.borderColor = 'var(--danger)';
                    valid = false;
                } else {
                    field.style.borderColor = '#e0e0e0';
                }
            });
            
            if(!valid) {
                showNotification('Harap isi semua field yang diperlukan!', 'error');
                return;
            }
            
            // Simulate submission
            this.innerHTML = 'Mengirim...';
            this.disabled = true;
            
            setTimeout(() => {
                showNotification('‚úÖ Pesanan berhasil dikirim! Teknisi akan menghubungi Anda.', 'success');
                this.innerHTML = 'üí≥ Pesan Sekarang';
                this.disabled = false;
                
                // Create WhatsApp message
                const name = document.getElementById('customer-name').value;
                const phone = document.getElementById('customer-phone').value;
                const address = document.getElementById('customer-address').value;
                const acType = document.querySelector('input[name="ac-type"]:checked').value;
                const pk = document.getElementById('ac-pk').value;
                const price = calculatePrice();
                
                const message = `Halo, saya ${name} ingin order cuci AC:%0A%0Aüìã *DETAIL ORDER*%0A‚Ä¢ Jenis AC: ${acType.toUpperCase()}%0A‚Ä¢ PK: ${pk}%0A‚Ä¢ Alamat: ${address}%0A‚Ä¢ Harga: Rp ${price}%0A%0ATerima kasih!`;
                
                // Open WhatsApp
                window.open(`https://wa.me/6281234567890?text=${message}`, '_blank');
            }, 1500);
        });

        // TECHNICIAN LOGIN
        document.getElementById('tech-login').addEventListener('click', function() {
            const id = document.getElementById('tech-id').value;
            const pass = document.getElementById('tech-password').value;
            
            if(!id || !pass) {
                showNotification('ID dan password harus diisi!', 'error');
                return;
            }
            
            // Simulate login
            this.innerHTML = 'Memuat...';
            
            setTimeout(() => {
                showNotification('Login berhasil!', 'success');
                this.innerHTML = 'Masuk';
                document.getElementById('job-list').classList.remove('hidden');
                
                // Generate sample jobs
                generateJobList();
            }, 1000);
        });

        // NOTIFICATION SYSTEM
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            
            document.getElementById('notification-area').appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 4000);
        }

        // INITIALIZE
        document.addEventListener('DOMContentLoaded', function() {
            updatePriceDisplay();
            generateOrderTable();
        });

        // GENERATE SAMPLE DATA
        function generateOrderTable() {
            const orders = [
                { id: 'ORD-001', customer: 'Budi Santoso', location: 'Jakarta Selatan', status: 'Pending' },
                { id: 'ORD-002', customer: 'Siti Aminah', location: 'Jakarta Barat', status: 'Confirmed' },
                { id: 'ORD-003', customer: 'Ahmad Rizki', location: 'Bekasi', status: 'Completed' },
                { id: 'ORD-004', customer: 'Maria Ulfa', location: 'Tangerang', status: 'Pending' }
            ];
            
            const table = document.getElementById('order-table');
            table.innerHTML = '';
            
            orders.forEach(order => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td style="padding: 12px; border-bottom: 1px solid #eee;">${order.id}</td>
                    <td style="padding: 12px; border-bottom: 1px solid #eee;">${order.customer}</td>
                    <td style="padding: 12px; border-bottom: 1px solid #eee;">${order.location}</td>
                    <td style="padding: 12px; border-bottom: 1px solid #eee;">
                        <span class="job-status status-${order.status.toLowerCase()}">${order.status}</span>
                    </td>
                    <td style="padding: 12px; border-bottom: 1px solid #eee;">
                        <button class="btn" style="padding: 5px 10px; font-size: 0.9rem;">Detail</button>
                    </td>
                `;
                table.appendChild(row);
            });
        }

        function generateJobList() {
            // Sample job generation logic
            console.log('Job list generated');
        }
    </script>
</body>
